@model List<codex.Models.Computadora>
@{
    ViewData["Title"] = "Recomendaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap solo para esta vista -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #0E021F;
            font-family: 'Segoe UI', sans-serif;
        }

        .resultado-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }

        .resultado-title {
            color: #f6e6fc;
            font-size: 2.5rem;
            font-weight: lighter;
            text-align: center;
            margin-bottom: 2rem;
            letter-spacing: 1px;
        }

        .resultado-alert {
            background-color: #f6e6fc;
            color: #130724;
            border: none;
            font-size: 1.2rem;
            border-radius: 12px;
            padding: 1rem;
        }

        .resultado-card {
            background: #f6e6fc;
            border-radius: 18px;
            border: 2px solid #130724;
            box-shadow: 0 2px 12px rgba(14, 2, 31, 0.10);
            transition: transform 0.2s, box-shadow 0.2s;
            height: 100%;
        }

            .resultado-card:hover {
                transform: translateY(-8px) scale(1.03);
                box-shadow: 0 6px 24px rgba(14, 2, 31, 0.18);
                border-color: #be9fe1;
            }

        .resultado-img {
            background: #fff;
            border-radius: 12px;
            height: 200px;
            object-fit: contain;
            border: 1px solid #e0d6f7;
            padding: 1rem;
        }

        .resultado-card-title {
            color: #130724;
            font-size: 1.3rem;
            margin-bottom: 0.5rem;
            font-weight: normal;
            letter-spacing: 0.5px;
        }

        .resultado-desc {
            color: #0E021F;
            font-size: 1.05rem;
            margin-bottom: 0.7rem;
        }

        .resultado-precio {
            background: #130724;
            color: #f6e6fc;
            font-size: 1.15rem;
            padding: 0.5em 1em;
            border-radius: 12px;
            display: inline-block;
            margin-top: 1rem;
            letter-spacing: 1px;
        }
    </style>
</head>
<body>
    <div class="resultado-container">
        <h2 class="resultado-title">@ViewData["Title"]</h2>

        @if (!Model.Any())
        {
            <div class="alert resultado-alert text-center" role="alert">
                <i class="fas fa-info-circle me-2"></i>
                No encontramos computadoras que coincidan con tus respuestas. Intenta ajustar el presupuesto o necesidades.
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card resultado-card">
                            <img src="@item.ImagenUrl" alt="Imagen de @item.Modelo" class="card-img-top resultado-img" />
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title resultado-card-title">@item.Marca @item.Modelo</h5>
                                <p class="card-text resultado-desc flex-grow-1">@item.Descripcion</p>
                                <span class="resultado-precio">
                                    @item.Precio.ToString("C0", new System.Globalization.CultureInfo("es-CO"))
                                </span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</body>
</html>
