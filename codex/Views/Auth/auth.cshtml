@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <link rel="icon" href="~/imagenes/Codex-Logo.png" />
    <link rel="stylesheet" href="~/css/auth.css" />
    <title>Codex | Inicia sesión</title>

</head>
<body>
    <header class="header" id="header">
        <nav class="nav_container">
            <a href="@Url.Action("Index", "Home")" class="nav_logo">Codex</a>
            <span id="user-name"></span>

            <div class="nav_menu" id="nav_menu">
                <div class="nav_close" id="nav_close">
                    <img src="~/imagenes/circulo-marca-x (1).png" alt="Cerrar menú" />
                </div>

                <ul class="nav_list">
                    <li>
                        <a href="#" class="nav_link">
                            <img src="~/imagenes/carro-de-la-carretilla.png" alt="Carrito" class="nav_icon" />
                            <span class="nav_text">Compra</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="nav_link">
                            <img src="~/imagenes/me-gusta.png" alt="Favoritos" class="nav_icon" />
                            <span class="nav_text">Favoritos</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Auth", "Auth")" class="nav_link">
                            <img src="~/imagenes/usuario-extranjero (1).png" alt="Iniciar sesión" class="nav_icon" />
                            <span class="nav_text">Iniciar Sesión</span>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="nav_toggle" id="nav_toggle">
                <img src="~/imagenes/menu (3).png" alt="Abrir menú" />
            </div>
        </nav>
    </header>

    <div class="auth-container">
        <div class="auth-wrapper">
            <div class="forms" id="forms">
                <form id="login-form" method="post">
                    @Html.AntiForgeryToken()
                    <h2>Inicia Sesión</h2>
                    <p>¿No tienes cuenta con nosotros?<a href="#" onclick="changeRegister(); return false;"> Registrate</a></p>

                    <label for="login-email">Correo Electronico</label>
                    <div class="auth-input">
                        <img src="~/imagenes/sobre.png" alt="Email" />
                        <input type="email" id="login-email" name="login-email" placeholder="Correo" required />
                    </div>
                    <label for="login-password">Contraseña</label>
                    <div class="auth-input">
                        <img src="~/imagenes/cerrar.png" alt="Contraseña" />
                        <input type="password" id="login-password" name="login-password" placeholder="Escriba 5 o mas caracteres" minlength="5" required />
                    </div>
                    <div id="login-message" class="message"></div>
                    <button type="submit" class="button">Entrar</button>
                </form>

                <form id="register-form" method="post">
                    @Html.AntiForgeryToken()
                    <h2>Crear una cuenta</h2>
                    <p>¿Ya tienes cuenta con nosotros?<a href="#" onclick="changeLogin(); return false;"> Inicia Sesión</a></p>

                    <label>Llena los siguientes campos</label>
                    <div class="auth-input">
                        <img src="~/imagenes/usuario.png" alt="Nombre" />
                        <input type="text" id="register-nombre" name="register-nombre" placeholder="Nombre" required />
                    </div>
                    <div class="auth-input">
                        <img src="~/imagenes/firma (1).png" alt="Apellido" />
                        <input type="text" id="register-apellido" name="register-apellido" placeholder="Apellido" required />
                    </div>
                    <div class="auth-input">
                        <img src="~/imagenes/sobre.png" alt="Email" />
                        <input type="email" id="register-correo" name="register-correo" placeholder="Correo" required />
                    </div>
                    <div class="auth-input">
                        <img src="~/imagenes/cerrar.png" alt="Contraseña" />
                        <input type="password" id="register-password" name="register-password" placeholder="Contraseña" minlength="5" required />
                    </div>
                    <div id="register-message" class="message"></div>
                    <button type="submit" class="button">Registrarme</button>
                </form>
            </div>
        </div>

        <div class="auth-banner">
            <section>
                <h2>Bienvenidos a</h2>
                <img src="~/imagenes/Logo-Blanco.png" alt="" />
                <p>Un sistema de recomendación que depende de tus respuestas</p>
            </section>
        </div>

        <div class="auth-sidebar" id="sidebar">
            <div class="sign" id="login-sidebar">
                <img src="~/imagenes/proximo.png" alt="" />
                <span>Iniciar Sesión</span>
            </div>
            <div class="sign" id="register-sidebar">
                <img src="~/imagenes/user.png" alt="" />
                <span>Registrarme</span>
            </div>
        </div>
    </div>

    <script src="~/js/auth.js"></script>
</body>
</html>
